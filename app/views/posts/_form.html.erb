<h1>Create a New Post</h1>

<%= form_for post do |f| %>
<p>
    <%= f.label :title %>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :content %>
    <%= f.text_field :content %>
</p>
<%= f.label :category %>
<p>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
</p>
    <%= f.fields_for :categories, post.categories.build do |cat_builder| %>
    <p>
        <%= cat_builder.text_field :name %>
    </p>
    <% end %>
    <%= f.submit %>
<% end %>